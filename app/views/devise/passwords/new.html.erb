<div class="container h-100">
  <div class="row justify-content-center align-items-center h-100">
    <div class="col-6 mx-auto">
      <div class="card shadow">
        <%= form_for(resource, as: resource_name, html: { class: "form-signin" }, url: registration_path(resource_name)) do |f| %>

          <div class="text-center mb-4">
            <h2 class="h3 mb-3 font-weight-normal"><%= t('.forgot_your_password') %></h2>
          </div>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-lg btn-outline btn-block btn-outline-dark" %>
          </div>
          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
